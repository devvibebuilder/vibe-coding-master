# .editorconfig - Master Repository Governance Standard

root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.{js,ts,jsx,tsx,json}]
# Refuerza la legibilidad para el flujo de Inferencia Dirigida
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{package.json,*.yml}]
indent_size = 2

# Restriccion de arquitectura: Evitar archivos masivos para optimizar tokens
[**/logic/**.ts]
# Mantiene la logica de negocio atomica y desacoplada
max_line_length = 80
